                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:maxHeight="24.0dip"
                     android:max="100"
                     android:progress="0"
                     android:minHeight="12.0dip"
                     style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
</LinearLayout>
